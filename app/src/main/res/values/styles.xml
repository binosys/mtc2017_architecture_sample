<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="ConsoleButton">
        <item name="android:layout_width">@dimen/messenger_button_width</item>
        <item name="android:layout_height">@dimen/messenger_button_height</item>
        <item name="android:layout_margin">@dimen/xsmall_margin</item>
    </style>

    <style name="ConsoleButtonRight" parent="ConsoleButton">
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="MessengerListItemText">
        <item name="android:layout_height">@dimen/messenger_button_height</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/bs_white</item>
    </style>

    <style name="MessengerTitleStrip">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_margin">12dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="MessageItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:typeface">monospace</item>
    </style>


</resources>
